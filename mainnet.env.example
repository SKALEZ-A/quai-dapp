# Quai Superapp Mainnet Environment Configuration
# Copy this to .env and fill in your values

# =============================================================================
# CONTRACT ADDRESSES (After Deployment)
# =============================================================================

# QNS Contracts (deploy these first)
QNS_REGISTRY_ADDRESS=0x...
QNS_CONTROLLER_ADDRESS=0x...
AUCTION_MANAGER_ADDRESS=0x...
RESERVED_NAMES_ADDRESS=0x...
QNS_NFT_ADDRESS=0x...
PAYMENT_RESOLVER_ADDRESS=0x...
REVERSE_REGISTRAR_ADDRESS=0x...

# Social Contract
SOCIAL_CONTRACT_ADDRESS=0x...

# =============================================================================
# API CONFIGURATION
# =============================================================================

PORT=4000
NODE_ENV=production

# Database (use a managed PostgreSQL service like Supabase, Neon, or Railway)
DATABASE_URL=postgresql://username:password@host:5432/database

# Redis (use Redis Cloud, Upstash, or Railway)
REDIS_URL=redis://username:password@host:port

# CORS - your production domain
ALLOWED_ORIGINS=https://yourdomain.com

# =============================================================================
# WEB3 CONFIGURATION
# =============================================================================

# Quai RPC (Mainnet - Cyprus-1)
QUAI_RPC_URL=https://rpc.quai.network

# IPFS (web3.storage for production)
WEB3_STORAGE_TOKEN=your_web3_storage_token_here

# =============================================================================
# SECURITY & MONITORING
# =============================================================================

# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secure_jwt_secret_here

# Sentry DSN for error monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics (PostHog, Mixpanel, etc.)
ANALYTICS_KEY=your_analytics_key

# =============================================================================
# DEPLOYMENT ACCOUNTS
# =============================================================================

# Contract admin (multi-sig wallet recommended for mainnet)
ADMIN_ADDRESS=0xYourMultiSigWalletAddress

# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM UTC
